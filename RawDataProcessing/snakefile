# Load the config file at the top
# configfile: "config.yaml"

out_path     = "Output/"
data_path    = "Data/"
modules_path = "Modules/"
submod_path  = "Modules/Submodules/"

# 1. General Purpose
rule all:
    input:
        [f'{out_path}DE.inc', 
        f"{data_path}AAU Kommuneplan/residential_exo_heatdem.nc",
        f'{data_path}Power Grid/municipal_connectivity.nc',
        f"{data_path}Danmarks Statistik/transport_demand.csv"]

rule create_conversion_dictionaries:
    output:
        f"{submod_path}conversion_dictionaries.pkl"
    shell:
        f"""
        python {submod_path}create_name_conversion_dict.py
        """

rule get_grid_from_Balmorel:
    output:
        f"{data_path}Power Grid/municipal_connectivity.nc"
    shell:
        """
        python Modules/Submodules/get_grid.py
        """

rule do_clustering:
    input:
        f"{data_path}Power Grid/municipal_connectivity.nc"
    shell:
        """
        python Modules/clustering.py
        """

# 2. Exogenous Electricity Demands
rule format_energinet_electricity_data:
    input:
        f"{data_path}Timeseries/ElConsumptionEnerginet2023.csv"
    output:
        f"{data_path}Timeseries/energinet_eldem.nc"
    shell:
        """
        python Modules/energinet_electricity.py
        """

rule exo_electricity_demand:
    input:
        [f"{modules_path}Submodules/conversion_dictionaries.pkl", f"{data_path}Timeseries/energinet_eldem.nc"]
    output:
        [f"{out_path}DE.inc", f"{out_path}DE_VAR_T.inc", 
        f"{out_path}INDUSTRY_DE.inc", f"{out_path}INDUSTRY_DE_VAR_T.inc", 
        f"{out_path}INDIVUSERS_DE.inc", f"{out_path}INDIVUSERS_DE_VAR_T.inc"]
    shell:
        """
        python Modules/createDE.py --conversion-file={input[0]} --el-dataset={input[1]} --show-difference=False
        """

# 3. Exogenous Heat Demands
rule format_vpdk21_data:
    input:
        directory(f"{data_path}AAU Kommuneplan")
    output:
        [f"{data_path}AAU Kommuneplan/residential_exo_heatdem.nc", 
        f"{data_path}AAU Kommuneplan/industry_exo_heatdem.nc"]
    shell:
        """
        python Modules/aauvarmeplan2021.py
        """

rule format_dkstat_industry_data:
    input:
        r"Data\Danmarks Statistik\Industriforbrug Type.xlsx"
    output:
        f"{data_path}Danmarks Statistik/industry_demand.nc"
    shell:
        """
        python Modules/danmarks_statistik.py --get-industry-demand
        """

# 4. Transport Demand
rule format_dkstat_transport_data:
    input:
        r"Data\Danmarks Statistik\Transportforbrug Type.xlsx"
    output:
        f"{data_path}Danmarks Statistik/transport_demand.csv"
    shell:
        """
        python Modules/danmarks_statistik.py --get-transport-demand --include-bunkering=false
        """
 